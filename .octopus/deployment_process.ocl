step "Create a Docker Network" {
    properties = {
        Octopus.Action.TargetRoles = "acme-web-server"
    }

    action {
        action_type = "Octopus.DockerNetwork"
        is_required = true
        properties = {
            Octopus.Action.Docker.Args = "docker network create"
            Octopus.Action.Docker.NetworkType = "bridge"
        }
        worker_pool_variable = ""
    }
}